@using AtlasBlog.Models
@using AtlasBlog.Services.Interfaces
@using Microsoft.AspNetCore.Identity

@model IEnumerable<AtlasBlog.Models.Blog>

@inject SignInManager<BlogUser> SignInManager
@inject IImageService _imageService


@{
    ViewData["Title"] = "Index";
}

<h1 class="greenText mt-4">Blog Index</h1>

@*@if (User.IsInRole("Administrator"))*@
@if (SignInManager.IsSignedIn(User))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
else
{
    <p>
        <a asp-action="Create" asp-area="Identity">Login to Create</a>
    </p>
}

<table class="table">
    
    <thead class="greenText">    
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ResearchTopic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BlogName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Updated)
            </th>
            <th></th>
        </tr>
    </thead>
    

    <tbody class="text-light">
        @foreach (var item in Model!)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ResearchTopic)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BlogName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Created)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Updated)
                </td>
                <td>
                    <div class="row">
                        <div>
                            <a asp-action="Details" asp-route-id="@item.Id">View Details</a>
                        </div>

                    @if (SignInManager.IsSignedIn(User))
                    {
                        <div>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </div>
                    }
                    </div>
                </td>
            </tr>
        }
    </tbody>

</table>
