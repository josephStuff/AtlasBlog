@using AtlasBlog.Models
@using AtlasBlog.Services.Interfaces
@using Microsoft.AspNetCore.Identity

@model IEnumerable<AtlasBlog.Models.Blog>

@inject SignInManager<BlogUser> SignInManager
@inject IImageService _imageService


@{
    ViewData["Title"] = "Index";
}

<h1>Blog Index</h1>

@*@if (User.IsInRole("Administrator"))*@
@if (SignInManager.IsSignedIn(User))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
else
{
    <p>
        <a asp-action="Create" asp-area="Identity">Login to Create</a>
    </p>
}

<table class="table text-light">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImageExt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BlogName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Updated)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model!)
        {
            <tr>
                <td>
                    @if (item.ImageExt == null)
                    {
                        <img class="img-fluid img-thumbnail" style="width:100px;height:100px" />
                    }
                    else
                    {
                        <img class="img-fluid" style="width:100px;height:100px" src="@_imageService.ConvertByteArrayToFile(item.ImageData, item.ImageExt)" />
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BlogName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Created)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Updated)
                </td>
                <td>
                    <div>
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    </div>

                    @if (SignInManager.IsSignedIn(User))
                    {
                        <div>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        </div>
                        <div>
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </div>
                    }
                </td>
            </tr>
        }
    </tbody>

</table>
