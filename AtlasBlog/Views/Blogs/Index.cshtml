<div class="row">
    @foreach (var blog in Model)
    {
        <div class="row ">
            <div class="col-3 gy-2 order-first">
                <div class="order-first">
                    <div class="glass-jw-style p-1 hoverButton">
                        <div>
                            <div class="text-center overflow">
                                <h5 class="card-title text-center overflow" style="height: 3.2rem;">@Html.DisplayFor(modelItem => blog.BlogName)</h5>
                                <div class="card bg-black card-text border-bottom border-primary ">
                                    @Html.DisplayFor(modelItem => blog.ResearchTopic)
                                </div>
                                <div class="card bg-black card-text border-bottom border-top border-primary " style="height: 3rem;">
                                    @Html.DisplayFor(modelItem => blog.Title)
                                </div>
                                <div class="card bg-black card-text border-bottom border-top border-primary " style="height: 3rem;">
                                    @Html.DisplayFor(modelItem => blog.Description)
                                </div>
                            </div>
                        </div>
                        <div class=" row row-cols-2 p-2">
                            <div class="">
                                Posted: @Html.DisplayFor(modelItem => blog.Created)
                            </div>
                            <div class="d-flex justify-content-end align-items-end">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <a asp-action="Edit" asp-controller="Blogs" asp-route-id="@blog?.Id">
                                        <i class="bi-pencil-fill" style="font-size: 1.5rem; color:lightyellow;"></i>
                                    </a>
                                    <a asp-action="Details" asp-controller="Blogs" asp-route-id="@blog?.Id">
                                        <i class="bi-person-fill" style="font-size: 1.5rem; color:lightyellow;"></i>
                                    </a>
                                    <a asp-action="Delete" asp-controller="Blogs" asp-route-id="@blog?.Id">
                                        <i class="bi-trash-fill" style="font-size: 1.5rem; color:red;"></i>
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @foreach (var blogPost in blog.BlogPosts)
            {
                <div class="col ">
                    <div class=" glass-jw-style p-1 hoverButton">
                        <div class="text-center overflow">
                            <h5 class="card-title text-center overflow" style="height: 3.2rem;">Child of Blogs</h5>
                            <div class="card bg-black card-text border-bottom border-primary ">
                                Blog Posts
                            </div>
                            <div class="card bg-black card-text border-bottom border-top border-primary " style="height: 3rem;">
                                Blog Posts
                            </div>
                            <div class="card bg-black card-text border-bottom border-top border-primary " style="height: 3rem;">
                                Blog Posts
                            </div>
                        </div>
                        <div class=" row row-cols-2 p-2">
                            <div class="">
                                place holder
                            </div>
                            <div class="d-flex justify-content-end align-items-end">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <a asp-action="Edit" asp-controller="Blogs" asp-route-id="">
                                        <i class="bi-pencil-fill" style="font-size: 1.5rem; color:lightyellow;"></i>
                                    </a>
                                    <a asp-action="Details" asp-controller="Blogs" asp-route-id="">
                                        <i class="bi-person-fill" style="font-size: 1.5rem; color:lightyellow;"></i>
                                    </a>
                                    <a asp-action="Delete" asp-controller="Blogs" asp-route-id="">
                                        <i class="bi-trash-fill" style="font-size: 1.5rem; color:red;"></i>
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

